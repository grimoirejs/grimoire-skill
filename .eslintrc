{
  "extends": "idiomatic",
  "env": {
    "node": true
  },
  // Allow for aligning property name values
  "rules": {
    "key-spacing": [2, { "align": "value" }],
    // Exactly one declarator per declaration per function (var) or block (let or const)
    "one-var": [2, "never"],
    // camelCased names
    "camelcase": [2, {"properties": "always"}],
    // Don't use var
    "no-var": [2]
  }
}